<% const collection="subscribe" ; const linkPrefix=`/admin/${collection}/` ; const linkThumb='' %>
    <div class="card card-info card-outline">
        <form action="<%= linkPrefix %>sendEmail/<%= item._id %>" method="POST" class="mb-0">
            <div class="card-body">
                <h1>
                    Send mailto: <%= item.email %>
                </h1>

                <div class="form-group row">
                    <div class="col-xs-12 col-sm-5">
                        <input type="text" id="name-input-form" name="email" class="form-control form-control-sm" value="<%= item.email %>">
                    </div>
                    <div class="col-xs-12 col-sm-7">
                        <input type="text" id="name-input-form" name="subject" class="form-control form-control-sm" placeholder="Subjects">
                    </div>
                </div>

                <div class="form-group row">

                    <div class="col-xs-12 col-sm-12">
                      <textarea name="content" id="mail" class="form-control form-control-sm"></textarea>
                    </div>
                </div>
          
           </div>
            <div class="card-footer">
                <div class="col-12 col-sm-8 offset-sm-2 text-center">
                    <button type="submit" class="btn btn-sm btn-success mr-1 "><i class="far fa-envelope"></i> 
                        <%= item._id ? 'Send': '' %></button>
                        
                    <a href="<%= linkPrefix %>" class="btn btn-sm btn-danger mr-1">
                        Cancel</a>
                </div>
            </div>
        </form>
    </div>
