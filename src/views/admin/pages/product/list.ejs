<%- include('../../helpers/render_status.ejs') %>
<%- include('../../helpers/render_pagination_ver2.ejs') %>
<%- include('../../helpers/render_alert.ejs') %>

<% const collection = 'product' ; const linkPrefix = `/admin/${collection}/`; const folderImage = '/products/' %>
	
<%- alertSuccess(messages, 4000)%>

<div class="row mb-2">
    <div class="col-sm-6">
        <h1 class="m-0">Danh mục sản phẩm</h1>
    </div>
</div>

<div class="card card-info card-outline">
	<div class="card-header">
		<h6 class="card-title">Search & Filter</h6>
		<div class="card-tools">
			<button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse"><i class="fas fa-minus"></i></button>
		</div>
	</div>
	<div class="card-body">
		<div class="row justify-content-between">
			<div class="mb-1">
				<div class="btn-search">
					<div class="btn-group">
						<button type="button" class="btn btn-info" data-toggle="dropdown" aria-expanded="false">Filter</button>
					</div>
					<% countStatus.forEach(e => { %>
						<a>
							<button type="button" class="btn btn-<%=e.class%>" button-status="<%= e.status %>">
								<%= e.name %> (<span><%= e.count %></span>)
							</button>
						</a>
					<% }) %>
				</div>	
			</div>
			<div class="mb-1">
				<form action="<%= linkPrefix %>" method="get">

					<div class="input-group">
						<input type="text" class="form-control form-control-sm" name="search" value="<%= search %>" placeholder="Search for..." style="min-width: 300px">
						<div class="input-group-append">
							<a type="button" class="btn btn-sm btn-danger"  href="<%= linkPrefix %>">Clear</a>
							<button type="submit" class="btn btn-sm btn-info" id="btn-search">Search</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>



<!-- Content -->
<form action="/admin/category/multipleAction" method="post" name="multipleForm" id = "multiForm">
<div class="card card-info card-outline">
	<div class="card-header">
		<h4 class="card-title">List</h4>
		
		<div class="card-tools">
			<a href="<%= linkPrefix %>form" class="btn btn-warning" style="background-color: #F0AD4E; color: white; font-weight: 500;">Add New</a>
		</div>
		<input type="hidden" name="action" id="inputHiddenAll" value="" >
	</div>


	<div class="card-body">

			<!-- List Content -->
		
		<div class="table-responsive">
			<table class="table table-sm table-striped table-hover text-nowrap btn-table mb-0 ">
				<thead class="table table-dark">
					<tr>
						<th class="text-center">
							<div class="custom-control custom-checkbox">
								<input class="custom-control-input cbAll" type="checkbox" id="checkAll">
								<label for="checkAll" class="custom-control-label"></label>
							</div>
						</th>

						<th class="text-center">#</th>
						<th class="text-center">Image</th>
						<th class="text-center">Name</th>
						<th class="text-center">Ordering</th>
						<th class="text-center">GroupCategory</th>
						<th class="text-center">GroupBrand</th>
						<th class="text-center">Show To</th>
						<th class="text-center">Status</th>
						<th class="text-center">Action</th>
					</tr>
				</thead>
				<tbody class="form-control-sm ">
						<% items.forEach((row, index) => { %>
							<tr>
								<td class="text-center">
									<div class="custom-control custom-checkbox">
										<input class="custom-control-input" type="checkbox" name="cid" id="check-<%= index+1  %>" value="<%= row._id  %>">
										<label for="check-<%= index + 1  %>" class="custom-control-label"></label>
									</div>
								</td>
	
								<td class="text-center"><%= index + 1  %></td>
	
								<% if (row.image) { %>
									<td class="text-center"><img src="/uploads<%= folderImage%><%= row.image%>" alt="" width="60" height="60" class="img-thumbnail" /></td>
								<% } %>
	
								<td class="text-center"><span><%= row.name  %></span></td>
	
								<td class="text-center position-relative" >
									<input data-link="<%= linkPrefix %>changeOrdering/<%= row._id %>" type="number" name="ordering" value="<%= row.ordering %>" class="text-center ordering">
								</td>

								<td class="text-center position-relative">
									<select id="change-status" name="idCategory" data-link="<%= linkPrefix %>changeCategory/<%= row._id %>"
										class="custom-select custom-select-sm">
										<% const activeCategories = categories.filter(category => category.status === 'active');
										if (activeCategories.length > 0) {%>
											<% activeCategories.forEach(category => { %>
												<option class="text-center" value="<%= category._id %>" <%= <%= row.idCategory && row.idCategory.name === category.name ? 'selected' : '' %>>
													<%= category.name %>
												</option>
											<% }); %>
										<% } else { %>
											<option class="text-center" value="" disabled selected>No Category</option>
										<% } %>
									</select>
								</td>


								<td class="text-center position-relative">
									<select id="change-status" name="idBrand" data-link="<%= linkPrefix %>changeBrand/<%= row._id %>" class="custom-select custom-select-sm">
										<% const activeBrands = brands.filter(brand => brand.status === 'active');
										if (activeBrands.length > 0) {%>
											<% brands.forEach(brand => { %>
												<option class="text-center" value="<%= brand._id %>" <%= <%= row.idBrand && row.idBrand.name === brand.name ? 'selected' : '' %>>
													<%= brand.name %>
												</option>
											<% }) %>
										<% } else { %>
											<option class="text-center" value="" disabled selected>No Brand</option>
										<% } %>
									</select>
								</td>
				
								<td class="text-center">
									<div class="form-check form-switch">
										<input data-link="<%= linkPrefix %>changeIsSpecial/<%= row._id %>" class="form-check-input" type="checkbox" id="isSpecial" name="isSpecial" <%= row.isSpecial ? 'checked' : '' %>>
										<label class="form-check-label" for="isSpecial"> Special</label>
									</br>
										<input data-link="<%= linkPrefix %>changeNewProduct/<%= row._id %>"  class="form-check-input" type="checkbox" id="newProduct" name="newProduct" <%= row.newProduct ? 'checked' : '' %>>
										<label class="form-check-label" for="isSpecial"> New</label>
									</div>
								</td>

								<%- renderStatus(row._id, row.status, linkPrefix) %>
	
								<td class="text-center">
									<a href="<%= linkPrefix %>detail/<%= row._id%>" class="rounded-circle btn btn-sm btn-warning " title="View">
										<i class="fas fa-eye"></i>
									</a>

									<a href="<%= linkPrefix %>form/<%= row._id%>" class="rounded-circle btn btn-sm btn-info " title="Edit">
										<i class="fas fa-pencil-alt"></i>
									</a>

									<a href="javascript:clickToDeleteId('<%= linkPrefix %>delete/<%= row._id%>')" class="rounded-circle btn btn-sm btn-danger">
										<i class="fas fa-trash-alt"></i>
									</a>
								</td> 
							</tr>
						<% }) %>
				</tbody>
			</table>
		</div>
		<!-- </form> -->
	</div>
	<!-- pagination -->
	<div class="card-footer clearfix">
		<ul class="pagination pagination-sm m-0 float-right">
			<%- renderPagination(pagination)%>
		</ul>
	</div>
</div>
<form>

<script>
	    document.addEventListener('DOMContentLoaded', function () {
        let deletedID;
        let btnDeleted = document.getElementById('buttonDeleted');
        let deleteForm = document.forms['deletedForm'];
        let submitAllForm = document.forms['multipleForm'];
        let btnCheckAll = $('#checkAll');
        let btnCheck    = $('input[name="cid"]');
        let btnSubmitAll = $('#buttonSubmitAll');
        let isChecked;

        // button check all has been checked
        btnCheckAll.change(function (){
            isChecked = btnCheckAll.prop('checked');
            if(isChecked === false){
                $('input[class="ordering"]').removeAttr('name');
            }
            else {
                $('input[class="ordering"]').attr('name', 'ordering');
            }
            btnCheck.prop('checked',isChecked);
            disableSubmit();

        })
    })
</script>





