<% const collection="order" ; const linkPrefix=`/admin/${collection}/` ; const linkThumb='' ; const folderImage = '/products/' %>
    <div class="card card-info card-outline">
            <div class="card-body">
                <h1>
                    === Page Detail ===
                </h1>

                <div class="form-group row align-items-center">
                    <label for="fullname" class="col-sm-2 col-form-label text-sm-right required">Fulname:</label>
                    <p class="col-sm-10 mb-0"><%= detailProduct.userInfo.fullname %></p>
                </div>

                <div class="form-group row align-items-center">
                    <label for="phone" class="col-sm-2 col-form-label text-sm-right required">Phone:</label>
                    <p class="col-sm-10 mb-0"><%= detailProduct.userInfo.phone %></p>
                </div>

                <div class="form-group row align-items-center">
                    <label for="address" class="col-sm-2 col-form-label text-sm-right required">Address:</label>
                    <p class="col-sm-10 mb-0"><%= detailProduct.userInfo.address %></p>
                </div>

                <div class="form-group row align-items-center">
                    <label for="address" class="col-sm-2 col-form-label text-sm-right required">Status:</label>
                    <p class="col-sm-10 mb-0"><%= detailProduct.status %></p>
                </div>

                <div class="form-group row align-items-center">
                    <label for="address" class="col-sm-2 col-form-label text-sm-right required">Time:</label>
                    <p class="col-sm-10 mb-0"><%= detailProduct.createdAt.toLocaleString('vi-VN') %></p>
                </div>

                <div class="card-body">
                    <h4 style="color: gray;">=== Order information ===</h4>
                    <table class="table table-bordered table-sm table-striped text-nowrap btn-table mb-0">
                        <thead class="table-dark">
                        <tr>
                            <th class="text-center">Image</th>
                            <th class="text-center">Name</th>
                            <th class="text-center">Price</th>
                            <th class="text-center">Quantity</th>
                        </tr>
                        </thead>
                        <tbody class="form-control-sm ">
                            <% if (detailProduct.products.length > 0) { %>
                                <% detailProduct.products.forEach(( item) => { %>
                                    <tr >
                                        <td class="text-center"><img src="/uploads/products/<%= item.image %>" alt="<%= item.name %>" class="img-thumbnail"></td>
                                        <td class="text-center"><%= item.name %></td>
                                        <td class="text-center"><%= item.priceAtTime.toLocaleString('vi-VN', { style: 'currency', currency: 'VND' }) || 0 %></td>
                                        <td class="text-center"><%= item.quantity %></td>
                                    </tr>
                                <% }) %>
                            <% } %>
                        </tbody>
                    </table>
                </div>
                <div class="order-summary">
                    Total: <%= detailProduct.total.toLocaleString('vi-VN', { style: 'currency', currency: 'VND' }) || 0 %>
                </div>

           </div>
            <div class="card-footer">
                <div class="col-12 col-sm-8 offset-sm-2 text-right">
                
                    <a href="<%= linkPrefix %>" class="btn btn-md btn-danger mr-1">
                        Back</a>
                </div>
            </div>
    </div>
