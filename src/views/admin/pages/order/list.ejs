<%- include('../../helpers/render_pagination_ver2.ejs') %>
<%- include('../../helpers/render_status.ejs') %>

<% const collection = 'order' ; const linkPrefix = `/admin/${collection}/` ; const folderImage = '/orders/'%>

<div class="row mb-2">
    <div class="col-sm-6">
        <h1 class="m-0">Danh s√°ch <%= collection%></h1>
    </div>
</div>

<div class="card card-info card-outline">
	<div class="card-header">
		<h6 class="card-title">Search & Filter</h6>
		<div class="card-tools">
			<button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse"><i class="fas fa-minus"></i></button>
		</div>
	</div>
	<div class="card-body">
		<div class="row justify-content-between">
			<div class="mb-1">
				<div class="btn-search">

					<% countStatus.forEach(e => { %>
						<a>
							<button type="button" class="btn btn-<%=e.class%>" button-status="<%= e.status %>">
								<%= e.name %> (<span><%= e.count %></span>)
							</button>
						</a>
					<% }) %>
					
				</div>
			</div>
			<div class="mb-1">
				<form action="" method="get" id="form-search">
					<div class="input-group">
						<input type="text" class="form-control form-control-sm" name="search" value="<%= search %>" placeholder="Search for..."
							style="min-width: 300px">
						<div class="input-group-append">
							<a href="<%= linkPrefix %>" type="button" class="btn btn-sm btn-danger" href="">Clear</a>
							<button type="submit" class="btn btn-sm btn-info" id="btn-search">Search</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>



<!-- Content -->
	<div class="card card-info card-outline">
		<div class="card-header">
			<h4 class="card-title">List</h4>

			<input type="hidden" name="action" id="inputHiddenAll" value="" >
		</div>

	<div class="card-body">
			<table class="table table-sm table-striped table-hover text-nowrap btn-table mb-0 ">
				<thead class="table-dark">
					<tr>
						<th class="text-center">
							<div class="custom-control custom-checkbox">
								<input class="custom-control-input cbAll" type="checkbox" id="checkAll">
								<label for="checkAll" class="custom-control-label"></label>
							</div>
						</th>

						<th class="text-center">#</a></th>
						<th class="text-center">IDCustomer</a></th>
						<th class="text-center">Fullname</a></th>
						<th class="text-center">Status</a></th>
						<th class="text-center">CreatedAt</a></th>
						<th class="text-center">Total</a></th>
						<th class="text-center">Action</th>
					</tr>
				</thead>
				<tbody>
                    <% items.forEach((row, index) => { %>
						<tr>
							<td class="text-center">
								<div class="custom-control custom-checkbox">
									<input class="custom-control-input" type="checkbox" name="cid" id="check-<%= index+1  %>" value="<%= row._id  %>">
									<label for="check-<%= index + 1  %>" class="custom-control-label"></label>
								</div>
							</td>

							<td class="text-center"><%= index + 1  %></td>

							<td class="text-center"><span><%= row.order_id %></span></td>

							<td class="text-center"><span><%= row.userInfo.fullname%></span></td>					



							<td class="text-center position-relative">
								<select id="change-status" name="status" data-link="<%= linkPrefix %>changeStatus/<%= row._id %>" class="custom-select custom-select-sm">
									<!-- <option value="novalue">Choose Status</option> -->
									<option style="background-color: orange; color: white;" class="text-center" " value="pending" <%=row.status==='pending' ? 'selected' : '' %>>
										Pending</option>
									<option style="background-color: green; color: white;" class="text-center"  value="shipping" <%=row.status==='shipping' ? 'selected' : '' %>>
										Shipping</option>
								</select>
							</td>

							<td class="text-center position-relative" ><%= row.createdAt.toLocaleString('vi-VN')%></td>

							<td class="text-center"><span><%= row.total.toLocaleString('vi-VN', { style: 'currency', currency: 'VND' }) || 0%></span></td>

							<td class="text-center">
								<a href="<%= linkPrefix %>detail/<%= row._id%>" class="rounded-circle btn btn-sm btn-warning " title="View">
									<i class="fas fa-eye"></i>
								</a>
							</td> 
						</tr>
					<% }) %>
				</tbody>
			</table>
		<!-- </form> -->
	</div>
	<!-- pagination -->
	<div class="card-footer clearfix">
		<ul class="pagination pagination-sm m-0 float-right">
			<%- renderPagination(pagination)%>
		</ul>
	</div>
</div>
