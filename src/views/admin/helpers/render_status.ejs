<% 
    renderStatus = (id, status) => {
        let xHtml = ''
        let color = 'success'
        let icon = 'check'
        let statusN = status == 'inactive' ? 'active' :'inactive'

        if(status == 'inactive') {
            color = 'danger'
            icon = 'times'
        }

        xHtml = `<td class="text-center position-relative">
                    <a href= "javascript:clickToChangeStatus('/admin/item/changeStatus/${id}/${statusN}')" class="rounded-circle btn btn-sm btn-${color}">
                        <i class="fas fa-${icon}"></i>
                    </a>
                </td>`
        return xHtml
    } 
%>