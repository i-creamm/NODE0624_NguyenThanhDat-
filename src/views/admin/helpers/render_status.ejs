<% 
    renderStatus = (type, id, status) => {
        let xHtml = ''
        let color = 'success'
        let icon = 'check'
        let statusN = status == 'active' ? 'inactive' :'active'
        let link = 'admin/' + type + '/changeStatus/'

        if(status == 'inactive') {
            color = 'danger'
            icon = 'times'
        }

        xHtml = `<td class="text-center position-relative">
                    <a href="${link}${id}/${statusN}" class="rounded-circle btn btn-sm btn-${color}">
                        <i class="fas fa-${icon}"></i>
                    </a>
                </td>`
        return xHtml
    } 
%>