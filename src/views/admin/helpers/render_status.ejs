<% 
    renderStatus = (id, status, linkPrefix) => {
        let xHtml = ''
        let color = 'success'
        let icon = 'check'
        let statusN = status == 'inactive' ? 'active' :'inactive'

        if(status == 'inactive') {
            color = 'danger'
            icon = 'times'
        }

        xHtml = `<td class="text-center position-relative">
                    <a href= "javascript:clickToChangeStatus('${linkPrefix}changeStatus/${id}/${statusN}')" class="rounded-circle btn btn-sm btn-${color}">
                        <i class="fas fa-${icon}"></i>
                    </a>
                </td>`
        return xHtml
    } 
%>

