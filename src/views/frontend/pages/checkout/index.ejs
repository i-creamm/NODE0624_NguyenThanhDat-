                </li>
            </ul>
        </div><!-- End .col-lg-8 -->

        <div class="col-lg-4">
            <div class="order-summary">
                <h3>Summary</h3>

                <h4>
                    <a data-toggle="collapse" href="#order-cart-section" class="collapsed" role="button"
                        aria-expanded="false" aria-controls="order-cart-section"><%= cartDetail.totalQuantity ? cartDetail.totalQuantity : 0 %> products in Cart</a>
                </h4>

                <div class="collapse" id="order-cart-section">
                    <table class="table table-mini-cart">
                        <tbody id="body-cart-summary">
                            <% if (cartDetail.products.length > 0) { %>
                                <% cartDetail.products.forEach((item) => { %>
                                    <tr>
                                        <td class="product-col">
                                            <figure class="product-image-container">
                                                <a href="product.html" class="product-image-checkout">
                                                    <img src="/uploads/products/<%= item.productInfo.image %>" alt="product">
                                                </a>
                                            </figure>
                                            <div>
                                                <h2 class="product-title">
                                                    <%= item.productInfo.name %>
                                                </h2>
        
                                                <span class="product-qty">Qty: <%= item.quantity %></span>
                                            </div>
                                        </td>
                                        <td class="price-col"><%= item.priceAtTime.toLocaleString('vi-VN', { style: 'currency', currency: 'VND' }) || 0 %></td>
                                    </tr>
                                <% }) %>
                            <% } else { %>
                                <tr>
                                    <td class="product-col">
                                        <div>
                                            <h2 class="product-title">
                                                No products
                                            </h2>
                                        </div>
                                    </td>
                                </tr>
                            <% }  %>
                        </tbody>
                    </table>
                    <div class="dropdown-cart-total">
                        <span>Total</span>
                        <span class="cart-total-price"><%= cartDetail.totalPrice.toLocaleString('vi-VN', { style: 'currency', currency: 'VND' }) || 0%></span>
                    </div><!-- End .dropdown-cart-total -->
                </div>
                <!-- End #order-cart-section -->
            </div>
            <!-- End .order-summary -->
        </div>
